<robot name="basic_robot">
    <link name="link1">
        <inertial>
            <mass value = "1"/>
            <inertia ixx="1e-3" ixy="0.0" ixz="0.0" iyy="1e-3" iyz="0.0" izz="1e-3"/>
        </inertial>
    </link>

    <link name="link2">
        <inertial>
            <mass value = "10"/>
            <inertia ixx="1e-2" ixy="0.0" ixz="0.0" iyy="1e-2" iyz="0.0" izz="1e-2"/>
        </inertial>
    </link>

    <joint name="joint1" type="continuous">
        <parent link="link1"/>
        <child link="link2"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <axis xyz="0 0.2 0"/>
    </joint>
</robot>
